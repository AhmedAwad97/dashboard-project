<!DOCTYPE html>
<html lang="en">
  <%- include("./component/head.ejs") %>
  <body>
    <div class="page crud-page d-flex">
      <!--Start Side Bar-->
      <%- include("./component/nav.ejs") %>
      <!--End Side Bar-->

      <!--Start Content-->

      <div class="content full-width p-relative">
        <%- include("./component/header.ejs") %>

        <h1 class="p-relative">CRUD Managment System</h1>

        <!--Start of Crud Div-->
        <div class="crud">
          <div class="inputs">
            <input
              type="text"
              placeholder="Title"
              id="title"
              class="full-width rad-6"
            />

            <div class="prices mt-15">
              <input
                type="number"
                placeholder="Price"
                id="price"
                class="rad-6 mt-5"
              />
              <input
                type="number"
                placeholder="Taxes"
                id="taxes"
                class="rad-6 mt-5"
              />
              <input
                type="number"
                placeholder="Ads"
                id="ads"
                class="rad-6 mt-5"
              />
              <input
                type="number"
                placeholder="Discount"
                id="discount"
                class="rad-6 mr-10 mt-5"
              />
              <small class="c-white bg-red rad-6 pad-5 total fs-14"
                >Total:
              </small>
            </div>

            <input
              type="number"
              placeholder="Count"
              id="count"
              class="full-width mt-10 rad-6"
            />

            <input
              type="text"
              placeholder="Category"
              id="category"
              class="full-width mt-10 rad-6"
            />

            <div class="button flex-end">
              <button id="submit" type="submit" class="btn btn-pad mt-10">
                Submit
              </button>
            </div>
          </div>

          <div class="outputs">
            <div class="search">
              <input
                onkeyup="searchData(this.value)"
                type="search"
                placeholder="Search"
                class="full-width mt-10 rad-6 search-products"
              />
              <div class="mt-10 flex-end search-btns">
                <button class="btn btn-pad search-title bg-purple mr-10">
                  Search By Title
                </button>
                <button class="btn btn-pad search-category bg-purple">
                  Search By Category
                </button>
              </div>
            </div>
            <div>
              <button class="btn bg-red full-width mt-15 deleteAll"></button>
            </div>

            <div class="responsive-table">
              <table class="mt-15 txt-c">
                <thead>
                  <tr>
                    <td>ID</td>
                    <td>Title</td>
                    <td>Price</td>
                    <td>ADS</td>
                    <td>Taxes</td>
                    <td>Discount</td>
                    <td>Total</td>
                    <td>Count</td>
                    <td>Category</td>
                    <td>Update</td>
                    <td>Delete</td>
                  </tr>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </div>
        <!--End of Crud Div-->
      </div>
      <!--End Content-->
    </div>
    <script src="JS/main.js"></script>
    <script src="JS/crud.js"></script>
  </body>
</html>
